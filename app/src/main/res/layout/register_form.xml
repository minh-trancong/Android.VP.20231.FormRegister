<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingHorizontal="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="First Name"
                    android:layout_weight="0.4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:hint="FirstName"
                    android:layout_weight="0.6"
                    android:autofillHints=""
                    android:inputType="text"
                    android:background="@color/colorAccent"
                    android:paddingStart="15dp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingHorizontal="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Last Name"
                    android:layout_weight="0.4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:hint="LastName"
                    android:layout_weight="0.6"
                    android:autofillHints=""
                    android:inputType="text"
                    android:background="@color/colorAccent"
                    android:paddingStart="15dp"  />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gender_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_input"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdBtn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="Male"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/rdBtn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="Female"
                    tools:ignore="TouchTargetSizeCheck" />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:id="@+id/birthday_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_input"
            android:text="Birthday"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            />
        <LinearLayout
            android:id="@+id/birthday_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/birthday_lb"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">
            <EditText
                android:id="@+id/et_birthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:hint="Birthday"
                android:autofillHints=""
                android:inputType="date"
                android:background="@color/colorAccent"
                android:clickable="false"
                android:paddingStart="15dp"  />
            <Button
                android:id="@+id/btn_selectBirthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.3"
                android:text="Select"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_area_2"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_below="@id/birthday_input"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                />
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Address"
                android:autofillHints=""
                android:inputType="text"
                android:background="@color/colorAccent"
                android:paddingStart="15dp"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                />
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Email"
                android:autofillHints=""
                android:inputType="text"
                android:background="@color/colorAccent"
                android:paddingStart="15dp"  />
            <CheckBox
                android:id="@+id/checkbox_agree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:text="I agree to Terms of Use"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submitRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_area_2"
            android:layout_centerHorizontal="true"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Register"
            android:backgroundTint="@color/colorPrimary"/>
    </RelativeLayout>
</ScrollView>
